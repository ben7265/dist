<xten name="row" element="div">
    <style>
        display: flex;
        position: relative;
    </style>
    <nodeStyle>
        width: [$width||100%];
        align-content: [$align||stretch];
        gap:[$item-gap||0];
        height:[$height||fit-content];
        flex-direction: [$direction||row];
    </nodeStyle>
    <tablet>
        flex-direction:[$tablet-direction||row];
    </tablet>
    <phone>
        flex-direction:[$phone-direction||column];
    </phone>
</xten>
