<!-- default system collections -->
<collections name="default">
    <collection name="urls">
        <index name="url_index" type="unique">
            <field>
                <name>name</name>
                <value>1</value>
            </field>
        </index>
        <index name="type_index">
            <field>
                <name>type</name>
                <value>1</value>
            </field>
        </index>
        <index name="object_name_index">
            <field>
                <name>object-name</name>
                <value>1</value>
            </field>
        </index>
    </collection>

    <collection name="object_data">
        <index name="name_index" type="unique">
            <field>
                <name>name</name>
                <value>1</value>
            </field>
        </index>

        <index name="object_name_index">
            <field>
                <name>object-name</name>
                <value>1</value>
            </field>
        </index>

        <index name="type_index">
            <field>
                <name>type</name>
                <value>1</value>
            </field>
        </index>

        <index name="urls_index">
            <field>
                <name>urls</name>
                <value>1</value>
            </field>
        </index>

        <index name="created_index">
            <field>
                <name>created</name>
                <value>1</value>
            </field>
        </index>
    </collection>

    <collection name="users">
        <struct>
            <key type="uuid"/>
            <email type="email"/>
            <password/>
            <name/>
            <role default="user">
                <user/>
                <admin/>
            </role>
        </struct>

        <index name="email_index" unique="1">
            <field>
                <name>email</name>
                <value>1</value>
            </field>
        </index>

        <index name="key_index" unique="1">
            <field>
                <name>key</name>
                <value>1</value>
            </field>
        </index>
    </collection>

    <collection name="constants">
        <index name="scope_index">
            <field>
                <name>scope</name>
                <value>1</value>
            </field>
        </index>

        <index name="name_index">
            <field>
                <name>name</name>
                <value>1</value>
            </field>
        </index>
    </collection>
</collections>
