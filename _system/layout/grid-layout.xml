<xten name="grid-layout">
    <style>
        position: relative;
        min-height: 100vh;
    </style>

    <css>
        .[$class] .layers-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
    </css>

    <toolbar>
        <icon name="plus">
            <tooltip>add layer</tooltip>
            <click>
            <%
                var element = wxfns.getToolbarParent(event);
            %>
            </click>
        </icon>
    </toolbar>
</xten>

<xten name="page-element" element="div">
    <style>
        background-color: yellow;
    </style>
</xten>
