<xten name="layers" element="div">
    <style>
        position:relative;
        display: block;
        height: 100%;
    </style>
</xten>

<xten name="layer" element="div">
    <style>
        position:absolute;
    </style>
    <nodeStyle>
        top:[$layer-top||0]; 
        bottom:[$layer-bottom||0];
        left: [$layer-left||0];
        right: [$layer-right||0];
        z-index: [$index||0];
    </nodeStyle>
</xten>
